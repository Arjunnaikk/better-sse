{
	"compilerOptions": {
		"target": "ES2019",
		"strict": true,
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "./build",
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true
	},
	"include": ["./src/**/*"],
	"exclude": ["./src/**/*.test.ts", "./src/lib/testUtils.ts"]
}
